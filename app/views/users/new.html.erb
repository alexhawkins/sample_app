<% provide(:title, 'Sign up') %>
<h1><%= yield(:title) %></h1>

<div class="row">
	<div class="span5 offset4">
		<%= form_for(@user) do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>
		<p>
			<%= f.submit "Create my account", class: "btn-right btn btn-large btn-primary" %>
		</p>
		<% end %>
	</div>
</div>


